{
  "compilerOptions": {
    "target": "ES2017",
    "module": "Node16",
    "moduleResolution": "node16", 
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "isolatedModules": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}